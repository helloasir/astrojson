---
interface Props {
    domain: string;
    rank: string;
}

const { domain, rank } = Astro.props;
---

<div class="mt-8">
    <a 
        href={`https://${domain}`} 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition-colors"
    >
        Visit Website
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
        </svg>
    </a>
    
    <a href={`/page/${Math.ceil(parseInt(rank) / 1000)}`} class="ml-4 text-purple-400 hover:text-purple-300">
        ‚Üê Back to Rankings
    </a>
</div>