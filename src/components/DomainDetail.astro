---
interface Props {
    label: string;
    value: string;
    showBorder?: boolean;
}

const { label, value, showBorder = true } = Astro.props;
---

<div class={`${showBorder ? 'border-b border-gray-600' : ''} pb-3`}>
    <h3 class="text-gray-400 mb-1">{label}</h3>
    <p class="text-white">{value}</p>
</div>